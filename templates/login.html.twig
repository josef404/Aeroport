<!doctype html>
<html lang="fr">

<head>
    <meta charset="utf-8" />
    <title> Login | Aeroport</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Bootstrap Css -->

    <link href="assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

</head>

<body>

<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="bg-login text-center">
                        <div class="bg-login-overlay"></div>
                        <div class="position-relative">
                            <h5 class="text-white font-size-20">Welcome Back !</h5>
                            <p class="text-white-50 mb-0">Authentification</p>
                            <a href="index.html" class="logo logo-admin mt-4">
                                <img src="assets/images/logo-sm-dark.png" alt="" height="30">
                            </a>
                        </div>
                    </div>
                    <div class="card-body pt-5">
                        <div class="p-2">
                            <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                                <div class="form-group">
                                    <label for="username">{{ 'security.login.username'|trans }}</label>
                                    <input type="text" class="form-control" id="username" name="_username" placeholder="Enter username" value="{{ last_username }}" required="required" autocomplete="username" />

                                </div>

                                <div class="form-group">
                                    <label for="password">{{ 'security.login.password'|trans }}</label>
                                    <input type="password" class="form-control" id="password userpassword" placeholder="Enter password" name="_password" required="required" autocomplete="current-password" />

                                </div>

                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="remember_me customControlInline" name="_remember_me" value="on" />
                                    <label for="customControlInline" class="custom-control-label"> {{ 'security.login.remember_me'|trans }}</label>


                                </div>

                                <div class="mt-3">

                                    <input type="submit" class="btn btn-primary btn-block waves-effect waves-light" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                                </div>


                            </form>
                        </div>

                    </div>
                </div>
                <div class="mt-5 text-center">

                    <p>Â© 2020 Aeroport. Crafted with <i class="mdi mdi-heart text-danger"></i> by Elligy</p>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- JAVASCRIPT -->
<script src="assets/libs/jquery/jquery.min.js"></script>
<script src="assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="assets/libs/metismenu/metisMenu.min.js"></script>
<script src="assets/libs/simplebar/simplebar.min.js"></script>
<script src="assets/libs/node-waves/waves.min.js"></script>

<script src="assets/js/app.js"></script>

</body>

</html>